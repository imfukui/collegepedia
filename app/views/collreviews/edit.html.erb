<div class="container">
  <div class="row">
    <%= render 'shared/sidebar' %>
    <div class="col-11 col-md-8 ms-auto me-auto">
      <h2 class="fw-bold"><%= @collreview.college.name %></h2>
      <%= form_with model: @collreview do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.hidden_field :college_id, :value => @collreview.college_id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>

          <div class="form-group mb-3">
            <%= f.label :sub, class: "form-label" %>
            <%= f.text_field :sub, class:"form-control" %>
          </div>
          <%= f.label :tuition, class: "form-label" %>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span><%= f.number_field :tuition, class:"form-control" %>
            <span class="input-group-text">.00</span>
          </div>
          <%= f.label :scale, class: "form-label" %>
          <div class="input-group mb-3">
            <%= f.number_field :scale, class:"form-control" %>
            <span class="input-group-text" id="basic-addon">人</span>
          </div>
          <div class="form-group mb-3">
            <%= f.label :environment, class: "form-label" %>
            <%= f.text_area :environment, placeholder: "大学周辺エリアの治安や留学生の数など", class:"form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :pros, class: "form-label" %>
            <%= f.text_area :pros, class:"form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :cons, class: "form-label" %>
            <%= f.text_area :cons, class:"form-control" %>
          </div>
          <%= f.submit "更新", class: "btn btn-primary" %>
          <button type="button" class="btn btn-outline-danger fw-bold ms-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
          投稿を削除
          </button>
        </div>
      <% end %>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title fw-bold" id="exampleModalLabel">確認画面</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              本当に削除してもよろしいですか？
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <%= button_to 'Delete', collreview_path(@collreview), method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
