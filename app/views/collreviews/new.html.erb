<h1 class="submit-form-heading"><%= @college.name %>の評価を作成する</h1>
<%= form_with model: [@college, @collreview] do |f| %>
  <%= f.hidden_field :college_id, :value => @college.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="submit-form-body">
    <div class="form-group">
      <%= f.label :sub, "レビューのタイトル", class: "form-label" %>
      <%= f.text_field :sub, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :tuition, "学費", class: "form-label" %>
      $ <%= f.number_field :tuition, class:"form-control" %> /年
    </div>
    <div class="form-group">
      <%= f.label :scale, "学生数", class: "form-label" %>
      <%= f.number_field :scale, class:"form-control" %> 人
    </div>
    <div class="form-group">
      <%= f.label :environment, "環境", class: "form-label" %>
      <%= f.text_area :environment, placeholder: "大学周辺エリアの治安や留学生の数など", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :pros, "いいと思うところ", class: "form-label" %>
      <%= f.text_area :pros, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :cons, "改善してほしいところ", class: "form-label" %>
      <%= f.text_area :cons, class:"form-control" %>
    </div>
    <%= f.submit "作成する", class: "submit-button" %>
  </div>
<% end %>
