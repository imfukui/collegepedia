<div class="container">
  <div class="row">
    <%= render 'shared/sidebar' %>
    <div class="col-12 col-md-9 mt-4 mb-4">
      <h1 class="fw-bold"><%= @college.name %></h1>
      <%= form_with model: [@college, @collreview] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.hidden_field :college_id, :value => @college.id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>

        <div class="form-group mt-3 mb-3">
          <%= f.label :sub, class: "form-label" %>
          <%= f.text_field :sub, class:"form-control" %>
        </div>

        <%= f.label :tuition, class: "form-label" %>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span><%= f.number_field :tuition, class:"form-control" %>
          <span class="input-group-text">.00</span>
        </div>

        <%= f.label :scale, class: "form-label" %>
        <div class="input-group mb-3">
          <%= f.number_field :scale, class:"form-control" %>
          <span class="input-group-text" id="basic-addon">人</span>
        </div>

        <div class="form-group mb-3">
          <%= f.label :environment, class: "form-label" %>
          <%= f.text_area :environment, placeholder: "大学周辺エリアの治安や留学生の数など", class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :pros, class: "form-label" %>
          <%= f.text_area :pros, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :cons, class: "form-label" %>
          <%= f.text_area :cons, class:"form-control" %>
        </div>
        <%= f.submit "追加", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
