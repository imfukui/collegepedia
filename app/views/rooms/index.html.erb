<div class="container">
  <div class="row">
    <div class="col-11 col-md-8 ms-auto me-auto">
      <h3 class="fw-bold text-secondary mb-4">メッセージ一覧</h3>
      <% @others_entries.each do |entry| %>
        <%= link_to room_path(entry.room), class: "block-link link-secondary" do %>
          <div class="p-3 mb-4" id="chatroom-card">
            <div class="d-flex text-dark">
              <% if entry.user.image.blank? %>
                <h3 class="mb-0 me-1"><i class="fas fa-user-circle"></i></h3>
              <% else %>
                <%= image_tag entry.user.image.variant( resize: "50" ).processed, class: "me-1" %>
              <% end %>
              <div class="fw-bold">
                <%= entry.user.name %>
              </div>
            </div>
            <div class="mt-1 ms-1">
              <%= Chat.find_by(id: entry.room.chat_ids.last)&.message %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
