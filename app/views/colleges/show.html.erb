<div class="container">
  <div class="row">
    <div class="col-12 col-md-3 mt-4" id="sidebar-container">
      <ul class="nav flex-md-column" id="sidebar-list">
        <li class="nav-item col-6 col-md-12">
          <%= link_to 'School', college_path(@college), class: "nav-link link-secondary fw-bold", id: "school-nav-link" %>
        </li>
        <li class="nav-item col-6 col-md-12">
          <%= link_to 'Class', college_lessons_path(@college), class: "nav-link link-secondary fw-bold", id: "class-nav-link" %>
        </li>
      </ul>
    </div>
    <div class="col-12 col-md-9 mt-3" id="college-detail-container">
      <div class="shadow-none p-3 mb-5 bg-light rounded position-relative">
        <h1 class="fw-bold"><%= @college.name %></h1>
        <%= link_to 'データを修正', edit_college_path(@college), class: "btn btn-outline-secondary btn-sm position-absolute top-0 end-0 mt-3 me-2" %>
        <h6 class="fw-light"><i class="fas fa-map-marker-alt ps-1"></i> <%= @college.address %></h6>
        <table class="table table table-striped mt-3">
          <tr>
            <td>創立</td>
            <td><%= @college.estyear %>年</td>
          </tr>
          <tr>
            <td>公私区分</td>
            <td><%= @college.sector %></td>
          </tr>
          <tr>
            <td>GPA(編入時)</td>
            <td><%= @college.mingpa %></td>
          </tr>
          <tr>
            <td>特色</td>
            <td><%= @college.description %></td>
          </tr>
        </table>
      </div>
      <div class="d-flex mb-1">
        <h3><i class="far fa-comments"></i> Reviews</h3>
        <%= link_to new_college_collreview_path(params[:id]), class: "ms-auto btn btn-primary btn-sm p-2" do %>
          <i class="far fa-edit"></i> 評価を追加
        <% end %>
      </div>
      <div class="collreview-index">
        <% @collreviews.each do |collreview| %>
          <div class="shadow p-3 mb-5 bg-body rounded position-relative">
            <% if collreview.user.image.blank? %>
              <%= collreview.user.name %>
            <% else %>
              <%= image_tag collreview.user.image.variant( resize: "50" ).processed %>
            <% end %>
            <%= link_to collreview.user.name, user_path(collreview.user), class: "block-link link-success" %>
            <p class="fw-bold mt-3"><i class="fa-regular fa-closed-captioning"></i> <%= collreview.sub %></p>
            <p class="fw-lighter position-absolute top-0 end-0 mt-2 me-2"><i class="fas fa-clock"></i> <%= collreview.created_at.to_s(:datetime_jp) %></p>
            <table class="table">
              <tr>
                <th>学費</th>
                <td>$<%= collreview.tuition %></td>
              </tr>
              <tr>
                <th>学生数</th>
                <td><%= collreview.scale %>人</td>
              </tr>
              <tr>
                <th>環境</th>
                <td><%= collreview.environment %></td>
              </tr>
              <tr>
                <th><i class="fa-regular fa-thumbs-up"></i></th>
                <td><%= collreview.pros %></td>
              </tr>
              <tr>
                <th><i class="fa-regular fa-thumbs-down"></i></th>
                <td><%= collreview.cons %></td>
              </tr>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
