<div class="container">
  <div class="col-11 col-md-8 shadow-sm p-3 mb-5 bg-body rounded mt-4 ms-auto me-auto">
    <h1 class="fw-bold"><i class="fa-solid fa-graduation-cap"></i> Collegeの情報を変更</h1>
    <%= form_with model: @college do |f| %>
      <%= render 'shared/error_messages' , object: f.object %>
        <div class="form-group mb-3">
          <%= f.label :name, "学校名" , class: "form-label" %>
            <%= f.text_field :name, placeholder: "NewYork University" , class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :address, "所在地" , class: "form-label" %>
            <%= f.text_field :address, placeholder: "Illinois" , class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :sector, "公私区分" , class: "form-label" %>
            <%= f.select :sector, [ ["Private"], ["Public"] ], {}, {class:"form-select"} %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :estyear, "設立年" , class: "form-label" %>
            <%= f.number_field :estyear, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :mingpa, "アプライ時に必要なGPA" , class: "form-label" %>
            <%= f.text_field :mingpa, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :description, "特色" , class: "form-label" %>
            <%= f.text_area :description, class:"form-control" %>
        </div>
        <%= f.submit "更新する" , class: "btn btn-primary" %>
          <% end %>
            <button type="button" class="btn btn-outline-danger mt-2" data-bs-toggle="modal"
              data-bs-target="#exampleModal">
              学校のデータを削除
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="exampleModalLabel">確認画面</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    本当に削除してもよろしいですか？
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <%= link_to 'Delete' , college_path(@college), method: :delete, class: "btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
  </div>
</div>
