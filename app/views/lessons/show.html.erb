<%= provide(:title, @lesson.title) %>
<div class="container">
  <div class="row">
    <%= render 'shared/sidebar' %>
    <div class="col-12 col-md-9">
      <div class="shadow-none p-3 mb-5 bg-light rounded class-info mt-4">
        <h1 class="fw-bold"><%= @lesson.title %></h1>
        <p><i class="fas fa-user-alt"></i> <%= @lesson.professor %></p>
        <%= link_to '授業の評価を追加', new_college_lesson_course_review_path(@college, params[:id]), class: "btn btn-primary btn-sm" %>
        <%= link_to '授業の情報を更新', edit_college_lesson_path(@college, @lesson), class: "btn btn-outline-secondary btn-sm" %>
      </div>
      <div class="course-review-index">
        <h3><i class="far fa-comments"></i> Reviews</h3>
        <%= render partial: 'lesson_review_index', collection: @course_reviews, as: :review %>
        <%= paginate @course_reviews, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>
