<div class="container">
  <div class="row">
    <div class="col-12 col-md-3 mt-3">
    </div>
    <div class="col-11 col-md-9 shadow-sm p-3 mb-5 bg-body rounded mt-4 mb-4 ms-auto me-auto" id="class-edit-container">
      <h3 class="fw-bolder mb-3">クラスの情報を更新</h3>
      <%= form_with model: [@college, @lesson] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.hidden_field :college_id, :value => @college.id %>

        <div class="form-group mb-3">
          <%= f.label :title, "クラス名", class: "form-label" %>
          <%= f.text_field :title, placeholder: "ECON 101 Macro Economics", class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :professor, "教授名", class: "form-label" %>
          <%= f.text_field :professor, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :department, "学部区分", class: "form-label" %>
          <%= f.text_field :department, placeholder: "Business Administration", class:"form-control" %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary btn-sm mt-2" %>
      <% end %>
    </div>
  </div>
</div>
